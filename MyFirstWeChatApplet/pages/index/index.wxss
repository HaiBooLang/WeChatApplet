.box {
    width: 400rpx;
    height: 400rpx;
    color: aquamarine;
    background: bisque;
}

.boxhover {
    background: azure;
}

.box .inner {
    width: 1 00px;
    height: 100px;
    background-color: pink;
}

.box .innerhover {
    width: 100px;
    height: 100px;
    background-color: green;
}

.myScroll {
    width: 100%;
    height: 220rpx;
    background-color: grey;
    white-space: nowrap;
    z-index: -1;
}

.myScroll .row {
    width: 220rpx;
    height: 100%;
    background-color: khaki;
    display: inline-block;
    margin-right: 10rpx;
}

.myScroll .row:last-child {
    margin-right: 0rpx;
}

.out {}

.out .box1 {
    position: relative;
    z-index: 10;
    width: 300rpx;
    height: 300rpx;
    background-color: lightblue;
}

.out .box2 {
    position: relative;
    z-index: 10;
    width: 350rpx;
    height: 350rpx;
    background-color: lightcoral;
    left: 100rpx;
    top: 100rpx;
}

